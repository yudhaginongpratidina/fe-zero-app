{
    "compilerOptions": {
        "target": "ES2017",             // Specifies the ECMAScript target version for the compiled JavaScript.
        
        // Specifies the library files to include in the compilation.
        "lib": [
            "dom",                      // Includes DOM-related APIs.
            "dom.iterable",             // Includes iterable DOM APIs.
            "esnext"                    // Includes the latest ECMAScript features.
        ],

        "allowJs": true,                // Allows JavaScript files to be compiled.
        "skipLibCheck": true,           // Skips type checking of declaration files.
        "strict": true,                 // Enables strict type-checking options.
        "noEmit": true,                 // Disables emitting output files; useful for type-checking only.
        "esModuleInterop": true,        // Enables interoperability between CommonJS and ES Modules.
        "module": "esnext",             // Specifies the module code generation method.

        // Determines how modules are resolved.
        "moduleResolution": "bundler",  // Uses bundler-specific resolution logic.
        "resolveJsonModule": true,      // Allows importing JSON files as modules.
        "isolatedModules": true,        // Ensures each file is treated as a separate module.

        // Specifies how JSX should be handled in the output.
        "jsx": "preserve",              // Keeps JSX as-is for further processing by tools like Babel.
        "incremental": true,            // Enables incremental compilation for faster builds.

        // Adds custom plugins for the TypeScript compiler.
        "plugins": [
            {
                "name": "next"          // Adds support for Next.js-specific TypeScript features.
            }
        ],

        // Configures path aliases for cleaner imports.
        "paths": {
            "@/*": [
                "./src/*"               // Maps '@/' to the 'src' directory.
            ]
        }
    },

    // Specifies files and patterns to include in the compilation.
    "include": [
        "next-env.d.ts",                // Includes Next.js environment type definitions.
        "**/*.ts",                      // Includes all TypeScript files.
        "**/*.tsx",                     // Includes all TypeScript files with JSX.
        ".next/types/**/*.ts"           // Includes type definitions generated by Next.js.
    ],

    // Specifies files and patterns to exclude from the compilation.
    "exclude": [
        "node_modules"                  // Excludes dependencies from type-checking.
    ]
}